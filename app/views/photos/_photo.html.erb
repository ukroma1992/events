<% image_title = "Добавил #{render partial: 'users/user', object: photo.user}" %>
<% delete_photo = link_to(fa_icon('trash'), event_photo_path(photo.event, photo),
                      method: :delete, data: {confirm: t('controllers.photos.destroy_confirm')} ) %>

<% if current_user_can_edit?(photo) %>
  <% image_title += delete_photo %>
<% end %>

<%= link_to image_tag(photo.photo.thumb.url), photo.photo.url, data: {toggle: 'lightbox', title: image_title, gallery: 'events-gallery'}, class: 'event-gallery-photo' %> 
